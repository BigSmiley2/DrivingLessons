<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LessonViewFragment">

    <TextView
        android:id="@+id/textViewFragmentLessonsViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-16dp"
        android:layout_marginTop="8dp"
        android:text="lessons"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutFragmentLessonsViewSearch"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewFragmentLessonsViewFilters"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/filter"
        app:layout_constraintBottom_toBottomOf="@+id/textInputLayoutFragmentLessonsViewSearch"
        app:layout_constraintStart_toEndOf="@+id/textInputLayoutFragmentLessonsViewSearch" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutFragmentLessonsViewSearch"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentLessonsViewTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextFragmentLessonsViewSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="search user"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/viewFragmentLessonsView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutFragmentLessonsViewSearch" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFragmentLessonsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewFragmentLessonsView" />

</androidx.constraintlayout.widget.ConstraintLayout>