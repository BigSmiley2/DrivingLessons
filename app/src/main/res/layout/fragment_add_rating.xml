<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutFragmentAddRatingRate"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textInputLayoutFragmentAddRatingMessage"
        app:layout_constraintStart_toEndOf="@+id/textInputLayoutFragmentAddRatingMessage"
        app:layout_constraintTop_toTopOf="@+id/textInputLayoutFragmentAddRatingMessage">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextFragmentAddRatingRate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="rate"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutFragmentAddRatingMessage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewFragmentAddRating"
        app:layout_constraintStart_toEndOf="@+id/imageViewFragmentAddRating"
        app:layout_constraintTop_toTopOf="@+id/imageViewFragmentAddRating">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextFragmentAddRatingMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="add message"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageViewFragmentAddRating"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_icon" />

    <ImageView
        android:id="@+id/imageViewFragmentAddRatingAdd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textInputLayoutFragmentAddRatingRate"
        app:layout_constraintStart_toEndOf="@+id/textInputLayoutFragmentAddRatingRate"
        app:layout_constraintTop_toTopOf="@+id/textInputLayoutFragmentAddRatingRate"
        app:srcCompat="@drawable/add" />

</androidx.constraintlayout.widget.ConstraintLayout>