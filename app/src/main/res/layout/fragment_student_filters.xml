<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragments.StudentFiltersFragment">

    <TextView
        android:id="@+id/textViewFragmentStudentFiltersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="16dp"
        android:text="student filters"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textViewFragmentStudentFiltersTheory"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFragmentStudentFiltersTheory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="student has theory test"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentStudentFiltersTitle" />

    <Switch
        android:id="@+id/switchFragmentStudentFiltersTheory"
        style="@style/Default.Switch"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:checked="true"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFragmentStudentFiltersTheory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewFragmentStudentFiltersTheory"
        app:layout_constraintTop_toTopOf="@+id/textViewFragmentStudentFiltersTheory"
        app:showText="false" />
</androidx.constraintlayout.widget.ConstraintLayout>